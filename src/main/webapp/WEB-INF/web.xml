<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>  
        <param-name>primefaces.THEME</param-name>  
        <param-value>le-frog</param-value>  
    </context-param>     
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>    
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>waplj-realm</realm-name>
        <form-login-config>
            <form-login-page>/faces/login/login.xhtml</form-login-page>
            <form-error-page>/faces/login/ikkelogin.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Pages user</web-resource-name>
            <url-pattern>/faces/annet/*</url-pattern>
            <url-pattern>/annet/*</url-pattern>
            <url-pattern>/faces/bruker/*</url-pattern>
            <url-pattern>/bruker/*</url-pattern>
            <url-pattern>/faces/kunde/*</url-pattern>
            <url-pattern>/kunde/*</url-pattern>
            <url-pattern>/faces/retter/*</url-pattern>
            <url-pattern>/retter/*</url-pattern>
            <url-pattern>/faces/salg/*</url-pattern>
            <url-pattern>/salg/*</url-pattern>
            <url-pattern>/faces/salgUi/*</url-pattern>
            <url-pattern>/salgUi/*</url-pattern>              
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>          
        </web-resource-collection>
        <auth-constraint>
            <role-name>bruker</role-name>
            <role-name>admin</role-name>
            <role-name>kokk</role-name>
        </auth-constraint>        
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Pages admin</web-resource-name>
            <url-pattern>/faces/administrator/*</url-pattern>
            <url-pattern>/administrator/*</url-pattern>
            <url-pattern>/faces/annet/*</url-pattern>
            <url-pattern>/annet/*</url-pattern>
            <url-pattern>/faces/bosted/*</url-pattern>
            <url-pattern>/bosted/*</url-pattern>
            <url-pattern>/faces/bruker/*</url-pattern>
            <url-pattern>/bruker/*</url-pattern>
            <url-pattern>/faces/kunde/*</url-pattern>
            <url-pattern>/kunde/*</url-pattern>
            <url-pattern>/faces/ordre/*</url-pattern>
            <url-pattern>/ordre/*</url-pattern>
            <url-pattern>/faces/ordretabell/*</url-pattern>
            <url-pattern>/ordretabell/*</url-pattern>
            <url-pattern>/faces/retter/*</url-pattern>
            <url-pattern>/retter/*</url-pattern>
            <url-pattern>/faces/rolle/*</url-pattern>
            <url-pattern>/rolle/*</url-pattern>
            <url-pattern>/faces/salg/*</url-pattern>
            <url-pattern>/salg/*</url-pattern>
            <url-pattern>/faces/selgere/*</url-pattern>
            <url-pattern>/selgere/*</url-pattern>
            <url-pattern>/faces/selskapKunde/*</url-pattern>
            <url-pattern>/selskapKunde/*</url-pattern>
            <url-pattern>/faces/selskaper/*</url-pattern>
            <url-pattern>/selskaper/*</url-pattern>
            <url-pattern>/faces/sjoforer/*</url-pattern>
            <url-pattern>/sjoforer/*</url-pattern>
            <url-pattern>/faces/utkjoring/*</url-pattern>
            <url-pattern>/utkjoring/*</url-pattern>
            <url-pattern>/faces/utkjoringsBil/*</url-pattern>
            <url-pattern>/utkjoringsBil/*</url-pattern>
            <url-pattern>/faces/salgUi/*</url-pattern>
            <url-pattern>/salgUi/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>          
        </web-resource-collection>
        <auth-constraint>            
            <role-name>admin</role-name>
        </auth-constraint>        
    </security-constraint> 
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Pages user</web-resource-name>
            <url-pattern>/faces/salgUi/*</url-pattern>
            <url-pattern>/salgUi/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>           
        </web-resource-collection>
        <auth-constraint>
            <role-name>customer</role-name>
            <role-name>bruker</role-name>
            <role-name>admin</role-name>
            <role-name>kokk</role-name>
        </auth-constraint>        
    </security-constraint>   
    <security-role>
        <role-name>bruker</role-name>        
    </security-role> 
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>customer</role-name>
    </security-role>
    <security-role>
        <role-name>kokk</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/faces/login/ikkelogin.xhtml</location>
    </error-page>   
</web-app>
